/* pages/order/orderList.wxss */

.order_title_container {
  background: white;
  display: flex;
  flex-direction: row;
  width: 100%;
  /* justify-content: space-between; */
}

.order_item_title_image {
  width: 18px;
  height: 18px;
  margin-right: 5px;
  margin-left: 8px;
}

.order_title_item {
  width: 20%;
  text-align: center;
  padding-bottom: 3px;
  padding-top: 3px;
}

.order_title_item_text {
  text-align: center;
  padding-bottom: 3px;
  padding-top: 3px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order_title_item_select {
  width: 20%;
  text-align: center;
  padding-bottom: 3px;
  padding-top: 3px;
  color: red;
}

.order_title_animation {
  background: red;
  width: 20%;
  height: 2px;
}

.order_title_diliver {
  background: #eee;
  width: 100%;
  height: 1px;
}
