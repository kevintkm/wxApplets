/**index.wxss**/

.slide-image {
  width: 750rpx;
  height: 450rpx;
}

.menu_container {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}

.product_title {
  color: #333;
  font-size: 15px;
}

.product_highPrice {
  padding-left: 6px;
  color: #666;
  font-size: 12px;
  text-decoration: line-through;
}

.product_currentPrice {
  color: #f00;
  font-size: 15px;
}

.product_bottom {
  padding-left: 6px
}

.product_text {
  display: flex;
  flex-direction: row;
  margin-top: 10px;
  align-items: center;
  justify-content: space-between;
}

.join{
  display: flex;
  flex-direction: row;
}


.jion_info {
  background-color: #333;
  border-bottom-left-radius: 4px;
  border-top-left-radius: 4px;
  width: 80px;
  height: 30px;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  display: flex;
}

.join_left {
  font-size: 15px;
  color: #fff;
  margin-left: 5px;
}

.jion_in {
  background-color: #f00;
  border-bottom-right-radius: 4px;
  border-top-right-radius: 4px;
  width: 80px;
  height: 30px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.join_right {
  font-size: 15px;
  color: #fff;
  margin-right: 5px;
}

.log-item {
  margin: 10rpx;
}
